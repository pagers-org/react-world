{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["components/*"],
            "@/app/*": ["app/*"],
            "@/features/*": ["features/*"],
            "@/helpers/*": ["helpers/*"],
            "@/services/*": ["services/*"],
            "@/stores/*": ["stores/*"],
            "@/types/*": ["types/*"],
            "@/utils/*": ["utils/*"],
            "@/config/*": ["config/*"],
            "@/scss/*": ["scss/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
